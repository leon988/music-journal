<%- include('../partials/header') %>

<table>
  <thead>
    <tr>
      <th>Instrument</th>
      <th>Date</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% sessions.forEach(function(s) { %>
      <tr>
        <td><%= s.instrument %></td>
        <td><%= s.date.toLocaleDateString() %></td>
        <td><%= s.rating %></td>
        <td><a href="/sessions/<%= s._id %>">DETAILS</a></td>
        <td>
          <form action="/sessions/<%= s._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
</table>

<%- include('../partials/footer') %>